<div class="container">
<% if @app.errors.any? %>
    <div id="error_message">
        <h2>There were some errors in the form</h2>
        <ul>
            <% @app.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<p>
<h1>Register new API key</h1>
<fieldset>
<%= form_for @app,url: {action: "create"}, class:"form-inline" do |f| %>
<div class="form-group">
<p><%= f.label :name %></p>
<p><%= f.text_field :name %></p>
</div>
<div class="form-group">
<p><%= f.submit "Create app", class:"btn-primary btn-lg" %></p>
</div>
<% end %>
</fieldset>
</div>