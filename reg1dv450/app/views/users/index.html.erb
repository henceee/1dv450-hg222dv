<div class="container">
<% if flash[:notice] %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>


    
    <h2>Sign in</h2>
    
    <fieldset>
       <%= form_tag(login_path, method:"post") do %>
       <div class="form-group">
       <p> <%= label_tag(:email,"Email") %></p>
       <p><%= email_field_tag(:email) %></p>
       </div>
       
       <div class="form-group">
       <p> <%= label_tag(:password,"Password") %></p>
       <p><%= password_field_tag(:password) %></p>
       </div>
       <div class="form-group">
       <p> <%= submit_tag("Login", class: "btn-primary btn-lg") %></p>
        </div>
        <% end %>
    </fieldset>
    
    <%= link_to("Back to login", new_user_path, class:"btn btn-default") %>
</div>